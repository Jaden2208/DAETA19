<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E6F8"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="6">

            <ImageView
                android:id="@+id/img_boardtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@null"
                android:clickable="true"
                android:src="@drawable/list1"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="(게시글)"
                android:textColor="#000000"
                android:textSize="10dp"></TextView>

            <ImageView
                android:id="@+id/img_board"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_radio_button_checked_black_24dp"

                >

            </ImageView>




        </LinearLayout>

        <LinearLayout
            android:clickable="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="6">

            <ImageView
                android:id="@+id/img_albumtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@null"
                android:clickable="true"
                android:src="@drawable/list2"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="(앨범)"
                android:textColor="#000000"
                android:textSize="10dp"></TextView>

            <ImageView
                android:id="@+id/img_album"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_radio_button_unchecked_black_24dp"

                >
            </ImageView>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#E0E6F8"
            android:text="확인"
            android:gravity="right"
            android:paddingRight="10dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#E0E6F8"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="취소"
            android:textSize="20dp" />


    </LinearLayout>

</LinearLayout>