<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#fa7107"
        android:padding="5dp"
        android:orientation="horizontal">



        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back_black_24dp"/>



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/round_rectangle_blue"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="이상민"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★ ★ ★ ★ ★"
                    android:textColor="#FFEB3B"
                    android:layout_marginLeft="20dp"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/stars_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(5.0)"
                    android:textSize="12dp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"/>

            </LinearLayout>



            <TextView
                android:id="@+id/sex_age"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="남 / 24"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/start_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="게시일: 2019 / 11 / 23"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            >


            <ImageButton
                android:id="@+id/report_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@drawable/ic_report_black_24dp"/>

            <Button
                android:id="@+id/scrap_btn"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round_rectangle_blue_button"
                android:gravity="bottom"
                android:text="스크랩"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/keywords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="# 쾌활한 # 편의점 # 카페 # 피시방 # 강남구"
        android:textSize="18dp"
        android:padding="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#D5D5D5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강남구 / 동대문구 / 성북구 / 강북구"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:background="@drawable/round_rectangle_gray_full"
            android:padding="5dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경력"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/career"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="편의점 6개월 / 스타벅스 3개월 / 피시방 1년"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:background="@drawable/round_rectangle_gray_full"
            android:padding="5dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="근무 가능 시간"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/workable_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월, 목, 토, 일 10:00AM ~ 18:00PM"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:background="@drawable/round_rectangle_gray_full"
            android:padding="5dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대타 횟수"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3회"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:background="@drawable/round_rectangle_gray_full"
            android:padding="5dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/apply_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="신청"
            android:gravity="center"
            android:background="#2A9CE8"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/comment_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="댓글"
            android:gravity="center"
            android:background="#BEBEBE"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:padding="5dp"/>

    </LinearLayout>


</LinearLayout>