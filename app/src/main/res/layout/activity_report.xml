<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ReportActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".postscriptpageactivity"
        android:scrollbars="vertical"
        android:gravity="left">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#fa7107"
            android:padding="5dp"
            android:orientation="horizontal">



            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back_black_24dp"/>



            <ImageView
                android:id="@+id/imageView"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_rectangle_blue"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="이상민"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★ ★ ★ ★ ★"
                        android:textColor="#FFEB3B"
                        android:layout_marginLeft="20dp"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/stars_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(5.0)"
                        android:textSize="12dp"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"/>

                </LinearLayout>



                <TextView
                    android:id="@+id/sex_age"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="남 / 24"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="게시일: 2019 / 11 / 23"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="vertical"
                >


                <ImageButton
                    android:id="@+id/report_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_report_black_24dp"/>

                <Button
                    android:id="@+id/scrap_btn"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/round_rectangle_blue_button"
                    android:gravity="bottom"
                    android:text="스크랩"
                    android:textColor="#ffffff"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_reporttitle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:gravity="left"
            android:text="신고사유선택"
            android:paddingLeft="16dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="50dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/tv_reportcondition1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="허위 사기성 내용"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginBottom="25dp"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="150dp" />

            <CheckBox
                android:id="@+id/cb_reportcondition1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tv_reportcondition1"
                app:layout_constraintStart_toEndOf="@+id/tv_reportcondition1"
                app:layout_constraintTop_toTopOf="@+id/tv_reportcondition1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"

            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_reportcondition2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="노쇼"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginBottom="25dp"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="200dp" />

            <CheckBox
                android:id="@+id/cb_reportcondition2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tv_reportcondition2"
                app:layout_constraintStart_toEndOf="@+id/tv_reportcondition2"
                app:layout_constraintTop_toTopOf="@+id/tv_reportcondition2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_reportcondition3"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="근무태도 불성실"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginBottom="25dp"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="250dp" />

            <CheckBox
                android:id="@+id/cb_reportcondition3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tv_reportcondition3"
                app:layout_constraintStart_toEndOf="@+id/tv_reportcondition3"
                app:layout_constraintTop_toTopOf="@+id/tv_reportcondition3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_reportcondition4"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="부적절한 거래 게시"
                android:textSize="20dp"
                android:layout_marginBottom="25dp"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="300dp" />

            <CheckBox
                android:id="@+id/cb_reportcondition4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tv_reportcondition4"
                app:layout_constraintStart_toEndOf="@+id/tv_reportcondition4"
                app:layout_constraintTop_toTopOf="@+id/tv_reportcondition4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_opinionothers"
                android:layout_width="250dp"
                android:paddingLeft="16dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:gravity="left"
                android:text="기타"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="400dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/round_rectangle_blue"
                android:padding="20dp"
                android:textColorHint="@color/colorLightBlue"
                android:textColor="#000000"
                android:textSize="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="bottom">

            <Button
                android:id="@+id/btn_reportcancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#2A9CE8"
                android:layout_weight="1"
                android:text="취소"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:onClick="onClick"
                android:textStyle="bold"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/btn_reportsubmit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="#BEBEBE"
                android:layout_height="wrap_content"
                android:text="신고완료"
                android:onClick="onClick"
                android:textStyle="bold"
                android:textSize="20dp"
                tools:ignore="OnClick" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>